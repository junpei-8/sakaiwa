---
import Layout from '@/layouts/Layout.astro';
import LogoPngPath from './_/images/logo.png?url';

export const prerender = false;
---

<Layout>
  <a href="/kaiwa">
    <h1 class="logo">
      <img src={LogoPngPath} alt="タイトル" class="logo-img" />
    </h1>
  </a>

  <div class="content">
    <p class="desctiption">
      <span class="description-em">SakAI</span> を用いて坂井さんと会話しよう！
    </p>
    <a class="start-link" href="/kaiwa">はじめる</a>
  </div>

  <div class="copyright">© 2024 クリエイティブ・サカイヴァイブス.</div>
</Layout>

<style>
  :global(#layout-main) {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 24px;
  }

  @keyframes logo-animation {
    from {
      transform: translate(-100%, 50%);
      opacity: 0;
    }
    to {
      transform: translate(0, 0);
      opacity: 1;
    }
  }

  .logo {
    margin: 0 0 24px;
    animation: logo-animation 800ms 120ms ease-in-out both;
  }

  .logo-img {
    max-width: 100%;
    height: auto;
  }

  @keyframes content-animation {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .desctiption {
    font-size: 20px;
    font-weight: 600;
    margin-top: 0;
    margin-bottom: 40px;
    animation: content-animation 240ms 1080ms ease-in-out both;
  }
  .description-em {
    color: rgb(211, 45, 50);
  }

  .start-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 104px;
    height: 104px;
    margin: auto;
    border-radius: 50%;
    background-color: rgb(211, 45, 50);
    box-shadow:
      0px 2px 1px -1px rgba(0, 0, 0, 0.2),
      0px 1px 1px 0px rgba(0, 0, 0, 0.14),
      0px 1px 3px 0px rgba(0, 0, 0, 0.12);
    color: #fff;
    text-decoration: none;
    animation: content-animation 240ms 1240ms ease-in-out both;
    transition: box-shadow 120ms ease-in-out;
  }

  .start-link:hover {
    box-shadow:
      0px 2px 4px -1px rgba(0, 0, 0, 0.2),
      0px 4px 5px 0px rgba(0, 0, 0, 0.14),
      0px 1px 10px 0px rgba(0, 0, 0, 0.12);
  }

  .copyright {
    font-size: 14px;
    font-weight: 600;
    position: fixed;
    bottom: 24px;
    animation: content-animation 240ms 1400ms ease-in-out both;
    color: #888;
  }
</style>
